{
  // Enable format on save for all files
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Swift files - format on save
  "[swift]": {
    "editor.formatOnSave": true
  },

  // TypeScript and JavaScript - use Prettier
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Run on Save extension configuration for Swift files
  "achilleshr.runonsave": {
    "commands": [
      {
        "match": "\\.swift$",
        "cmd": "swift-format format --in-place ${file}",
        "runIn": "terminal"
      }
    ]
  },

  // Prettier configuration
  "prettier.enable": true,
  "prettier.requireConfig": false
}
